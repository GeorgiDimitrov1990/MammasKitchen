@model ProductListViewModel

@{ this.ViewData["Title"] = "All Recipes, page " + Model.PageNumber; }
<section class="sample-page container">
    <h1>@this.ViewData["Title"]</h1>

    <hr />
    <div class="row container">
        @foreach (var product in this.Model.Products)
        {
            <div class="media col-md-4">
                <img src="@product.ImageUrl" width="200" class="mr-3 img-responsive">
                <div class="media-body">
                    @*<h5 class="mt-0"><a asp-action="ById" asp-route-id="@product.Id">@product.Name</a></h5>*@
                    @product.CategoryName
                </div>
            </div>}
    </div>
    <hr />
    <partial name="_PagingPartial" model="@Model">
</section>
